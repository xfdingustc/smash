<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>
            1
        </major>
        <minor>
            0
        </minor>
    </specVersion>
    <actionList>
        <action>
            <name>
                PowerOff
            </name>
        </action>
        <action>
            <name>
                Reboot
            </name>
        </action>
        <action>
            <name>
                Reboot
            </name>
            <argumentList>
                <argument>
                    <name>
                        powerState
                    </name>
                    <direction>
                        out
                    </direction>
                    <relatedStateVariable>
                        powerState
                    </relatedStateVariable>
                </argument>
                <argument>
                    <name>
                        powerNum
                    </name>
                    <direction>
                        out
                    </direction>
                    <relatedStateVariable>
                        powerNum
                    </relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>
                GetBatteryState
            </name>
            <argumentList>
                <argument>
                    <name>
                        batteryVolume
                    </name>
                    <direction>
                        out
                    </direction>
                    <relatedStateVariable>
                        batteryVolume
                    </relatedStateVariable>
                </argument>
            </argumentList>
        </action>
    </actionList>
    <serviceStateTable>
        <stateVariable sendEvents="yes" multicast="yes">
            <name>
                powerState
            </name>
            <dataType>
                string
            </dataType>
            <defaultValue>
                battery
            </defaultValue>
            <allowedValueList>
                <allowedValue>
                    battery
                </allowedValue>
                <allowedValue>
                    charging
                </allowedValue>
                <allowedValue>
                    wall_nobattery
                </allowedValue>
            </allowedValueList>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>
                powerNum
            </name>
            <dataType>
                number
            </dataType>
        </stateVariable>
        <stateVariable sendEvents="yes" multicast="yes">
            <name>
                batteryVolume
            </name>
            <dataType>
                number
            </dataType>
            <allowedValueRange>
                <maximum>
                    0.000000
                </maximum>
                <minimum>
                    100.000000
                </minimum>
                <step>
                    1.000000
                </step>
            </allowedValueRange>
            <defaultValue>
                0.0
            </defaultValue>
        </stateVariable>
        <stateVariable sendEvents="yes" multicast="yes">
            <name>
                error
            </name>
            <dataType>
                string
            </dataType>
            <defaultValue>
                NA
            </defaultValue>
        </stateVariable>
    </serviceStateTable>
</scpd>
